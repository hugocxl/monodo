{
  "name": "@monodo/backend",
  "description": "Monodo backend repo",
  "version": "0.0.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "require": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "Hugo Corta <corta.hugo@gmail.com>",
  "scripts": {
    "dev": "tsup --silent --no-dts --watch & node --watch dist/index.js",
