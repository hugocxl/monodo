    "http-status": "^1",
    "joi": "^17",
    "mongoose": "^8",
    "morgan": "^1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5",
    "@types/bcryptjs": "^2",
    "@types/compression": "^1",
    "@types/cookie-parser": "^1",
    "@types/cors": "2",
    "@types/express": "^4",
    "@types/express-session": "^1",
    "@types/morgan": "^1"
  }
